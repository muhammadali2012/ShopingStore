    <div id="small-dialog2" class="mfp-hide agileinfo">
        <div class="pop_up">
            <form action="@Url.Action("singup", "Home")" method="post">
                <h3>SIGN UP</h3>
                <input type="text" id="em" Name="Email" placeholder="Email" required="">
                <div id="result"></div>
                 @Scripts.Render("~/bundles/jquery")
                <script>


                    $(document).ready(function () {



                        $('#em').focusout(function () {

                                var email = $('#em').val();
                                $.getJSON("/home/CheckEmail?Email=" + email, function (data)
                                {
                                    if (data) {
                                        $('#result').text("email already exists in database");
                                        $('#SubBtn').hide();


                                    }
                                    else {
                                        $('#result').text(" ");
                                        $('#SubBtn').show();


                                    }
                                });

                            });

                        });

                </script>
                <input type="text" id="pn" Name="Phone Number" placeholder="Phone Number" required="">
                <div id="result1"></div>
                <script>


                    $(document).ready(function () {



                        $('#pn').focusout(function () {

                                var phone = $('#pn').val();
                                $.getJSON("/home/CheckPhone?Phone Number=" + phone, function (data)
                                {
                                    if (data) {
                                        $('#result1').text("phonenumber already exists in database");
                                        $('#SubBtn').hide();
                                    }
                                    else {
                                        $('#result1').text("");
                                        $('#SubBtn').show();


                                    }
                                });

                            });

                        });

                </script>
                <input type="text" Name="Name" placeholder="Name" required="">
                <input type="password" Name="Password" placeholder="Password" required="">

                <div class="send-button wthree agileits">
                    <input type="submit" value="SIGN UP" id="SubBtn"/>
                
                </div>
            </form>
        </div>
    </div>
</div>
